#
# Add the uuid column to ciniki_business_users for replication.
#
ALTER TABLE ciniki_business_user_details DROP PRIMARY KEY;
ALTER TABLE ciniki_business_user_details ADD COLUMN id int not null auto_increment PRIMARY KEY FIRST;
